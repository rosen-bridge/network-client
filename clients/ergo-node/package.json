{
  "name": "@rosen-clients/ergo-node",
  "version": "1.0.0",
  "description": "A client library for Ergo Node",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "codemod": "jscodeshift --parser=ts -t ../../codemod/big-int-fiels-support.ts ./src/**/*.ts",
    "generate-client": "orval && rimraf ./src/api/index.ts && npm run codemod",
    "prettify": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint --fix . && npm run prettify",
    "build": "rimraf ./dist && tsc --build",
    "type-check": "tsc --noEmit",
    "release": "npm run build && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rosen-bridge/network-client"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/jscodeshift": "^0.11.6",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "jscodeshift": "^0.14.0",
    "orval": "^6.15.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.1",
    "typescript": "^5.0.3"
  },
  "keywords": [
    "rosen",
    "ergo"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/json-bigint": "^1.0.1",
    "axios": "^1.3.4",
    "json-bigint": "^1.0.0"
  }
}
